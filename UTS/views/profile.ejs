        #benefits h2 {
            font-size: 2em;
            color: #0288d1;
            margin-bottom: 15px;
            border-bottom: 2px solid #00acc1;
            padding-bottom: 5px;
        }

        #benefits p {
            font-size: 1.1em;
            margin-bottom: 15px;
            line-height: 1.6;
        }

        #benefits ul {
            padding-left: 20px;
            list-style-type: square;
        }

        #benefits ul li {
            font-size: 1.1em;
            margin: 8px 0;
            line-height: 1.5;
            color: #333;
        }

        /* Bagian Tips Memulai */
        .tips {
            background-color: #e1f5fe; 
            padding: 20px;
